@model Portal.Presentation.MVC.Users.ViewModels.LoginViewModel
@if (Model.IsLogedIn)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.DisplayName<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a asp-controller="Users" asp-action="Logout">@L["Log out"]</a></li>
            <li role="separator" class="divider"></li>
            <li><a asp-controller="Members" asp-action="Profile" asp-route-username="@Model.Username">@L["Profile"]</a></li>
            <li><a asp-controller="Users" asp-action="Settings" >@L["Settings"]</a></li>
        </ul>
    </li>
}
else
{
    <ul class="nav navbar-nav">
        <li><a asp-controller="Users" asp-action="Login">Log in</a></li>
    </ul>
}
