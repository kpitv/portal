@using Portal.Presentation.MVC.Members
@model Portal.Presentation.MVC.Members.ViewModels.MemberViewModel

<div id="formContainer"></div>
<form asp-action="@nameof(MembersController.Create)" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6">
        <h3 class="h3">@L["Enter your full name"]</h3>
        <h4 class="h4">@L["Russian"]: </h4>
        <div class="form-group">
            <label asp-for="FirstNameInRussian">@L["First name"]: </label>
            <input asp-for="FirstNameInRussian" class="form-control" />
            <span asp-validation-for="FirstNameInRussian" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondNameInRussian">@L["Second name"]: </label>
            <input asp-for="SecondNameInRussian" class="form-control" />
            <span asp-validation-for="SecondNameInRussian" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastNameInRussian">@L["Last name"]: </label>
            <input asp-for="LastNameInRussian" class="form-control" />
            <span asp-validation-for="LastNameInRussian" class="text-danger"></span>
        </div>
        <h4 class="h4">@L["Ukrainian"]: </h4>
        <div class="form-group">
            <label asp-for="FirstNameInUkrainian">@L["First name"]: </label>
            <input asp-for="FirstNameInUkrainian" class="form-control" />
            <span asp-validation-for="FirstNameInUkrainian" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondNameInUkrainian">@L["Second name"]: </label>
            <input asp-for="SecondNameInUkrainian" class="form-control" />
            <span asp-validation-for="SecondNameInUkrainian" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastNameInUkrainian">@L["Last name"]: </label>
            <input asp-for="LastNameInUkrainian" class="form-control" />
            <span asp-validation-for="LastNameInUkrainian" class="text-danger"></span>
        </div>
        <h4 class="h4">@L["English"]: </h4>
        <div class="form-group">
            <label asp-for="FirstNameInEnglish">@L["First name in English"]: </label>
            <input asp-for="FirstNameInEnglish" class="form-control" />
            <span asp-validation-for="FirstNameInEnglish" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastNameInEnglish">@L["Lastname in English"]: </label>
            <input asp-for="LastNameInEnglish" class="form-control" />
            <span asp-validation-for="LastNameInEnglish" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="h3">@L["Information"]</h3>
        <div class="form-group">
            <label asp-for="Email">@L["Your email"]: </label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div id="phoneNumbers" class="form-group">
            <label>@L["Phone number"]: </label>
            <div>
                <div class="form-group">
                    <input type="tel" name="PhoneNumber" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div id="removeNumberInputButton" class="btn glyphicon glyphicon-minus"></div>
            </div>
            <div id="addNumberInputButton" class="btn glyphicon glyphicon-plus"></div>
        </div>
        <div id="roles" class="form-group">
            <label>@L["Your role"]: </label>
            @foreach (var role in Model.Roles)
            {
                string check = role.Value ? "checked" : string.Empty;
                <div>
                    <input type="checkbox" data-role="@role.Key" class="checkbox-inline" @check />
                    <label>@role.Key</label>
                </div>
            }
        </div>

        <div id="contactLinks" class="form-group">
            <label>@L["Other contacts"]:</label>
            @foreach (var link in Model.ContactLinks)
            {
                <div class="form-group">
                    <label>@link.Key</label>
                    <input type="url" name="@link.Key" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            }
        </div>
        <div class="form-group">
            <label asp-for="About"></label>
            <textarea asp-for="About" class="form-control"></textarea>
            <span asp-validation-for="About" class="text-danger">
                @Model.Errors.FirstOrDefault(e => e.Key == "About")?.ToList()[0];
            </span>
        </div>
    </div>
    <div class="form-group col-md-2">
        <button class="btn btn-primary" id="submitMemberForm" type="submit">@L["Ok"]</button>
    </div>
</form>

@section scripts
{
    <script src="/js/members/member.js"></script>
}

